<% if review.liked_by?(current_user) %>
  <%= link_to public_review_likes_path(review), method: :delete, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= review.likes.count %> いいね外す
  <% end %>
<% else %>
  <%= link_to public_review_likes_path(review), method: :post, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= review.likes.count %> いいね
  <% end %>
<% end %>
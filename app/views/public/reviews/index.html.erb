<h1>投稿を検索</h1>
  <%= search_form_for @q, url: search_public_reviews_path do |f| %>
    <%= f.text_field :title_or_travel_comment_cont, class: "search-form", placeholder: "キーワード検索" %>
    <%= f.submit "検索", class: "search-btn" %>
  <% end %>
  <li class="nav-item">
    <%= link_to "いいねした投稿を見る",likes_public_user_path(@user), class: "nav-link" %>
  </li>

        <div class = "new-arrival">
          <h2>レビュー評価が高い場所！</h2>
          <div class = "new-arrival-contents" style="display:flex; flex-wrap:wrap;">
            <% @reviews.each do |review| %>
              <%= link_to public_review_path(review), class:"text-dark"  do %>
                <div class="mr-3 mt-3">
                  <%= image_tag review.image, size:"200x150" %>
                    <p class="mt-3 mb-1"><strong><%= review.travel_comment %></strong></p>
                    <p class="mb-5">
                      <div id="evaluation<%= review.id%>"></div>
                      <script>
                        $('#evaluation<%= review.id %>').empty();
                        $('#evaluation<%= review.id%>').raty({
                        size      : 36,
                        starOff   : '<%= asset_path('star-off.png') %>',
                        starOn    : '<%= asset_path('star-on.png') %>',
                        starHalf  : '<%= asset_path('star-half.png') %>',
                        readOnly: true,
                        score: <%= review.evaluation %>,
                        });
                      </script>
                    </p>
                    <p class="mb-5"><strong><%= @user.nickname %></strong></p>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
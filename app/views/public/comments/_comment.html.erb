 <% if @review.user == current_user %>
        <td>
          <%= link_to '編集する', edit_public_review_path(@review), class: "btn btn-sm btn-success edit_book_#{@review.id}", remote: true %>
        </td>
      <% end %>
      
 <table>
   <tbody>
     <% @review.comments.each do |comment| %>
       <tr>
         <td>
                <%= comment.user.nickname %>
              </td>
              <td class="", style="padding-left:50px;">
                <%= comment.impression_comment %>
              </td>
              <td>
                <% if comment.user == current_user %>
                  <div id="comments-index">
                    <%= link_to "Destroy", public_review_comment_path(@review, comment), method: :delete, class: "btn btn-danger pull-right", remote: true %>
                  </div>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
</table>


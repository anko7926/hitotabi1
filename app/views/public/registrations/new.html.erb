<div class = "container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <table class="ml-5">
      <h5 class="text-center", style="background-color:#eee; width:150px; margin:30px 0 30px 100px;"><b>新規会員登録</b></h5>
      <tbody>
        <tr class="field">
          <td><%= f.label :名前 %></td>
          <td><%= f.label :（姓） %></td>
          <td><%= f.text_field :last_name, placeholder:"山田" %></td>
          <td><%= f.label :（名） %></td>
          <td><%= f.text_field :first_name, placeholder:"花子" %></td>
        </tr>

        <tr class="field">
          <td><%= f.label :サイトで使用するニックネーム %></td>
          <td><%= f.text_field :nickname %></td>
        </tr>

        <tr class="field">
          <td><%= f.label :メールアドレス %></td>
          <td ><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"aaa@aaa" %></td>
        </tr>

        <tr class="field">
          <td><%= f.label :パスワード %></td>
          <% if @minimum_password_length %>
          <td>(<%= @minimum_password_length %> 文字以上)</td>
          <% end %>
          <td><%= f.password_field :password, autocomplete: "new-password" %></td>
        </tr>

        <tr class="field">
          <td><%= f.label :パスワード確認 %></td>
          <td><%= f.password_field :password, autocomplete: "new-password" %></td>
        </tr>

        <tr class="field">
          <td>
            <div class="actions">
              <%= f.submit "新規登録",class: "btn btn-success" %>
            </div>
          </td>
        </tr>


        <tr>
          <td><h5 class="ml-5 pl-3 pr-3 text-center", style="background-color:#ddd;">既に登録済みの方</h5></td>
        </tr>
        <tr>
          <td colspan="3", class="text-center"><p><%= link_to "こちら", new_user_session_path %>からログインしてください。</p></td>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>
<h2>検索</h2>
<!--検索フォーム-->
<%= search_form_for @q do |f| %>
  <!--name_contは、あいまい検索を指定-->
  <%= f.text_field :name_cont %>
  <%= f.submit "検索" %>
<% end %>
<!--検索結果-->
<% if @user.present? %>
  <!--検索がヒットした場合-->
  <% @user.each do |user| %>
    <%= user.id %>
    <%= user.name %>
  <% end %>
<% else %>
  <!--検索がヒットしなかった場合-->
  <p>検索結果はありません</p>
<% end %>

      <div>
        <div class = "new-arrival">
          <h2>レビュー評価が高い場所！</h2>
          <div class = "new-arrival-contents" style="display:flex; flex-wrap:wrap;">
            <% @users.each do |user| %>
              <%= link_to public_user_path(user), class:"text-dark"  do %>
                <div class="mr-3 mt-3">
                  <%= image_tag review.image, size:"200x150" %>
                    <p class="mt-3 mb-1"><strong><%= review.travel_comment %></strong></p>
                    <p class="mb-5"><strong><%= user.nickname %></strong></p>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
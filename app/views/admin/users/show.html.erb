 <div class="album py-5 bg-light">
      <div class="container">
        <div class="row">
          <% @reviews.each do |review| %>
            <div class="col-md-4">
              <div class="card mb-4 shadow-sm">
                <%= link_to edit_admin_review_path(review), class:"text-dark"  do %>
                  <div class="card-deck">
                    <div class="card">
                      <%= image_tag review.image, size:"345x200" %>
                      <div class="card-body">
                        <h5 class="card-title"><%= review.title %></h5>
                        <p class="card-text"><%= review.travel_comment %></p>
                        <div id="evaluation<%= review.id%>"></div>
                        <script>
                          $('#evaluation<%= review.id %>').empty();
                          $('#evaluation<%= review.id%>').raty({
                          size      : 36,
                          starOff   : '<%= asset_path('star-off.png') %>',
                          starOn    : '<%= asset_path('star-on.png') %>',
                          starHalf  : '<%= asset_path('star-half.png') %>',
                          readOnly: true,
                          score: <%= review.evaluation %>,
                          });
                        </script>
                        <p class="mb-5"><strong><%= review.user.nickname %></strong></p>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
      </div>
    </div>
<div class='container'>
		<h4 class="text-center", style="background-color:#eee; width:120px; margin:20px "><b>会員一覧</b></h4>
		<div class="row">
			<div class="col-12">
					<table class="table table-border", style="width:950px; margin: 0 auto; border-top:1px solid #bbb;">
						<thead>
							<tr style="background-color:#eee">
								<th>ユーザーID</th>
								<th>名前・ニックネーム</th>
								<th>メールアドレス</th>
								<th>ステータス</th>
							</tr>
						</thead>
						<tbody>
							<% @users.each do |user| %>
							<tr>
								<td><%= user.id %></td>
								<td style>
									<%= link_to admin_user_path(user.id), style: "color: #000; text-decoration: underline;" do %>
									<%= user.last_name %><%= user.first_name %><%= user.nickname %>
									<% end %>
								</td>
							  <td> <%= user.email %></td>
							  <td class="text-success font-weight-bold">
							  	<% if user.members_status == false %>
                  有効
                  <% else %>
                  退会
                  <% end %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
</div>
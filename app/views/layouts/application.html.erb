<!DOCTYPE html>
<html>
  <head>
    <title>Hitotabi1</title>
      <meta name="viewport" content="width=device-width,initial-scale=1">
      <%= csrf_meta_tags %>
      <%= csp_meta_tag %>
      <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>
      <header>
        <nav class="navbar navbar-expand navbar-dark navbar-fixed-top", style="background-color: #FF9872;">
          <div class="container">
            <% if user_signed_in? %>
              <div class="navbar-header">
                <%= link_to "ひとたび", public_reviews_path, class: "navbar-brand" %>
              </div>
              <span class="u h7 text-white strong">
                ようこそ！<%= current_user.nickname %>さん！
              </span>
              <ul class="navbar-nav">
                <li class="nav-item">
                  <button type="button" class="btn btn-warning btn-sm", style="margin-right:30px">
                    <%= link_to "レビューを投稿する", new_public_review_path, class: "nav-link" %>
                  </button>
                </li>
                <li class="nav-item">
                  <button type="button" class="btn btn-warning btn-sm", style="margin-right:30px">
                    <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-link" %>
                  </button>
                </li>
              </ul>
              <% elsif admin_signed_in? %>
                <div class="navbar-header">
                  <%= link_to "ひとたび", admin_users_path, class: "navbar-brand" %>
                </div>
                <ul class="navbar-nav">
                  <li class="nav-item">
                    <div class="r-2">
                      <button type="button" class="btn btn-warning btn-sm", style="margin-right:30px">
                        <%= link_to "ユーザー一覧", admin_users_path, class: "nav-link" %>
                      </button>
                    </div>
                  </li>
                  <li class="nav-item">
                    <button type="button" class="btn btn-warning btn-sm">
                      <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "nav-link" %>
                    </button>
                  </li>
                </ul>
                <% else %>
                <div class="navbar-header">
                  <%= link_to "ひとたび", root_path, class: "navbar-brand" %>
                </div>
                <span class="u h7 text-white strong">
                  ようこそ! ひとたびへ
                </span>
                <ul class="navbar-nav">
                  <li class="nav-item">
                    <div class="r-2">
                      <button type="button" class="btn btn-warning btn-sm", style="margin-right:30px">
                        <%= link_to "ゲストログイン",  public_users_guest_sign_in_path, method: :post, class: "nav-link" %>
                      </button>
                    </div>
                  </li>
                  <li class="nav-item">
                    <button type="button" class="btn btn-warning btn-sm", style="margin-right:30px">
                      <%= link_to "新規登録", new_user_registration_path, class: "nav-link" %>
                    </button>
                  </li>
                  <li class="nav-item">
                    <button type="button" class="btn btn-warning btn-sm">
                      <%= link_to "ログイン", new_user_session_path, class: "nav-link" %>
                    </button>
                  </li>
                </ul>
            <% end %>
          </div>
        </nav>
      </header>
      <%= yield %>
      <footer class="text-muted">
        <div class="container">
          <p class="float-center">
            ひとたび
          </p>
        </div>
      </footer>
    </body>
</html>
